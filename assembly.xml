<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<formats>
		<format>zip</format>
	</formats>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>*.jar</include>
      </includes>
      <outputDirectory>/jars</outputDirectory>
    </dependencySet>
  </dependencySets>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/db</directory>
			<outputDirectory>/db</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/import</directory>
			<outputDirectory>/import</outputDirectory>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/ui</directory>
			<outputDirectory>/ui</outputDirectory>
			<excludes>
				<exclude>**/images/**</exclude>
			</excludes>
			<filtered>true</filtered>
		</fileSet>
		<fileSet>
			<directory>${basedir}/src/main/ui/images</directory>
			<outputDirectory>/ui/images</outputDirectory>
			<filtered>false</filtered>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/src/main/manifest.xml</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>${basedir}/target/${artifactId}-${version}.jar</source>
			<outputDirectory>/jars</outputDirectory>
		</file>
	</files>
</assembly>
